{
  "name": "rechnungen",
  "version": "0.0.1",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/mongodb": "^4.0.7",
    "@types/node": "^17.0.18",
    "@types/body-parser": "^1.19.2",
    "concurrently": "^7.0.0",
    "nodemon": "^2.0.15",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "body-parser": "^1.19.2",
    "express": "^4.17.3",
    "mongodb": "^4.4.0",
    "mysql": "^2.15.0",
    "pg": "^8.5.1",
    "ts-node": "^10.5.0",
    "typeorm": "0.2.41"
  },
  "scripts": {
    "start": "yarn run nodemon",
    "start-dev": "yarn migrate-db && concurrently \"yarn run nodemon\"   \"yarn --cwd ./../client run start\"",
    "install-all": "concurrently \"yarn install\"   \"yarn --cwd ./../client install\"",
    "migrate-db": "node --loader ts-node/esm ./node_modules/typeorm/cli.js migration:run",
    "nodemon": "nodemon",
    "clean": "rm -rf dist build client/build src/public/**",
    "build": "tsc && yarn build:client",
    "copy:client": "cp -r ../client/build/* src/public && cp -r ../client/build build/public ",
    "build:client": "yarn --cwd ../client build && yarn copy:client",
    "dev": "nodemon",
    "dist": "sh ./scripts/dist.sh",
    "full-build": "yarn install-all && yarn clean && yarn build"
  }
}
